
mixin form(formData)
    .row
        .col-md-12
            form(method="get")
                each formField in formData.fields
                    case formField.type
                        when 'input'
                            +formInput(formField)
                        when 'selectCountry'
                            +formCountry(formField)
                        when 'textarea'
                            +formTextarea(formField)
                .form-group
                    button.btn.btn-primary.btn-lg(type="submit")!= formData.submitButtonText

mixin formLabel(formField)
    .form-group(class="#{formField.required ? 'required' : '' }")
        label(for="#{formField.value}")!= formField.name
        block

mixin formTextarea(formField)
    +formLabel(formField)
        textarea.form-control(rows="#{formField.options.rows}", id="#{formField.value}")

mixin formInput(formField)
    +formLabel(formField)
        input.form-control(type="text", id="#{formField.value}")

