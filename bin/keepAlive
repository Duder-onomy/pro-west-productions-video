#!/usr/bin/env bash
#set -x # for debugging

LOCAL=""

    while test $# -gt 0; do
        case "$1" in
            -h|--help)
                echo "Start the node server using nodemon"
                echo " "
                echo "The default environment is 'local' if no flags are passed."
                echo " "
                echo "options:"
                echo "-h, --help        show help"
                echo "-l|--local        run the keep alive command locally"
                echo " "
                exit 0
                ;;
            -l|--local)
                shift
                LOCAL="local"
                ;;
            *)
                break
                ;;
        esac
    done

if [ -z "$LOCAL" ]
then
    vagrant exec 'mongo --port 27018'
else
    mongo --port 27018
fi
